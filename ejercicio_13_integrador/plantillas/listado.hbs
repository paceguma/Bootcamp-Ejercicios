{{#if productos.length}}
<table>
    <tr>
        <td>Nombre</td>
        <td>Precio</td>
        <td>Stock</td>
        <td>Marca</td>
        <td>Categoría</td>
        <td>Detalles</td>
        <td>Foto</td>
        <td>Envío</td>
    </tr>
    {{#each productos}}
    <tr>
        <td>{{nombre}}</td>
        <td>{{precio}}</td>
        <td>{{stock}}</td>
        <td>{{marca}}</td>
        <td>{{categoria}}</td>
        <td>{{detalles}}</td>
        <td><img src= "{{foto}}" alt="{{nombre}}" style="display:block; margin:0 auto; width:50px"></td>
        {{#if envio}}
            <td>Si</td>
        {{else}}
            <td>No</td>
        {{/if}}
    </tr>
    {{/each}}
</table>
{{/if}}